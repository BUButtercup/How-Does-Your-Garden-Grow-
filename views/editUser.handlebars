<div style="width: 100%; height: 100%; display: flex; justify-content: center;">

<div id="invisible-box" style="color:white; font-weight: bold; display:none;">
    <div id="user-id">{{id}}</div>
    <div id="username">{{username}}</div>
    <div id="user-email">{{email}}</div>
</div>

<main style="width: 80%; align-self: center;">
    <div class="welcome-box" >
        <h2>Correct the fields you'd like to update:</h2>
        <form class="login">
            {{!-- TODO: pre-populate these fields with info from the user--}}
            <div id="label-inpt-box">
                <div id="form-label-box" class="form-element">
                    <label for="emailEdit">Email:</label>
                    <label for="usernameEdit">Username:</label>
                    <label for="passwordEdit">Password:</label>
                </div>
                <div id="form-inpt-box" class="form-element">
                    <input type="text" name="emailEdit" id="emailEdit">
                    <input type="text" name="usernameEdit" id="usernameEdit">
                    <input type="text" name="passwordEdit" id="passwordEdit">
                </div>
            </div>
            <div id="button-box" class="form-element">
                <button type="submit" id="submitEdit" class="garden-btn">UPDATE PROFILE</button>
                <button type="submit" id="submitDelete" class="garden-btn">DELETE PROFILE</button>
            </div>
        </form>
    </div>
</main>
</div>
<script src="/script/editUser.js"></script>